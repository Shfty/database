{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows MSVC) Launch Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/x86_64-pc-windows-msvc/debug/database_api.exe",
            "environment": [
                {
                    "name": "RUST_LOG",
                    "value": "debug"
                }
            ],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "Rust: Build Debug (MSVC)",
            "console": "integratedTerminal"
        },
        {
            "name": "(Windows MSVC) Launch Release",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/x86_64-pc-windows-msvc/release/database_api.exe",
            "environment": [
                {
                    "name": "RUST_LOG",
                    "value": "trace"
                }
            ],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "Rust: Build Release (MSVC)",
            "console": "integratedTerminal"
        },
        {
            "name": "(Windows GNU) Launch Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/x86_64-pc-windows-gnu/debug/database_api.exe",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "Rust: Build Debug (GNU)",
            "console": "integratedTerminal"
        },
        {
            "name": "(Windows GNU) Launch Release",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/x86_64-pc-windows-gnu/release/database_api.exe",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "Rust: Build Release (GNU)",
            "console": "integratedTerminal"
        },
        {
            "name": "(Windows) Attach",
            "type": "lldb",
            "request": "attach",
        },
    ]
}